<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.dandelion.radiot"
	android:versionName="0.6"
	android:versionCode="1">
	<supports-screens
		android:largeScreens="true"
		android:normalScreens="true"
		android:smallScreens="false"
		android:anyDensity="true" />
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:name="RadiotApplication">
		<activity
			android:name="PodcastListActivity" />
		<activity
			android:name=".live.LiveShowActivity"
			android:label="@string/live_show_title"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.RadiotNoTitle" />
		<activity
			android:name=".home_screen.AboutAppActivity"
			android:label="@string/about_app_title"
			android:screenOrientation="portrait"
			android:theme="@style/Theme.RadiotNoTitle" />
		<activity
			android:name=".home_screen.HomeScreenActivity"
			android:theme="@style/Theme.RadiotNoTitle"
			android:screenOrientation="portrait"
			android:launchMode="singleTask">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN"></action>
				<category
					android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>
		<service
			android:name=".live.LiveShowService" />
	</application>
	<uses-permission
		android:name="android.permission.INTERNET"></uses-permission>
	<uses-sdk
		android:minSdkVersion="6"></uses-sdk>
</manifest>