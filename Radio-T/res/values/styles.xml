<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="InfoBox">
		<item
			name="android:layout_width">fill_parent</item>
		<item
			name="android:layout_height">wrap_content</item>
		<item
			name="android:layout_marginLeft">7dp</item>
		<item
			name="android:layout_marginRight">7dp</item>
		<item
			name="android:paddingLeft">10dp</item>
		<item
			name="android:paddingRight">10dp</item>
		<item
			name="android:paddingTop">30dp</item>
		<item
			name="android:paddingBottom">30dp</item>
	</style>
	<style
		name="Radiot.TextView"
		parent="@android:style/Widget.TextView">
		<item
			name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item
			name="android:textColor">?android:attr/textColorSecondary</item>
	</style>
	<style
		name="Radiot.Button"
		parent="@android:style/Widget.Button">
		<item
			name="android:textColor">?android:attr/textColorPrimary</item>
		<item
			name="android:textSize">25sp</item>
		<item
			name="android:padding">8dp</item>
		<item
			name="android:background">@drawable/divider_background</item>
	</style>
	<style
		name="Theme.Radiot"
		parent="android:Theme">
		<item
			name="android:textViewStyle">@style/Radiot.TextView</item>
		<item
			name="android:buttonStyle">@style/Radiot.Button</item>
	</style>
	<style
		name="Theme.RadiotNoTitle"
		parent="Theme.Radiot">
		<item
			name="android:windowNoTitle">true</item>
	</style>
</resources>