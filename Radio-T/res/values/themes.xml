<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="Theme.Radiot"
		parent="android:Theme">
		<item
			name="android:textViewStyle">@style/Radiot.TextView</item>
		<item
			name="android:buttonStyle">@style/Radiot.Button</item>
	</style>
	<style
		name="Theme.RadiotNoTitle"
		parent="Theme.Radiot">
		<item
			name="android:windowNoTitle">true</item>
	</style>
	<style
		name="Theme.Radiot.Light"
		parent="android:Theme.Light">
		<item
			name="android:background">#c9e2fc</item>
		<item
			name="android:buttonStyle">@style/Radiot.Button</item>
		<item
			name="android:windowTitleSize">35dp</item>
		<item
			name="android:windowTitleBackgroundStyle">@style/Radiot.WindowTitleBackground</item>
	</style>
</resources>